<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tech.laihz.treex.mapper.LoginUserMapper">
    <insert id="addUser" parameterType="tech.laihz.treex.entity.LoginUser">
INSERT INTO login_user(name,password) VALUES (#{name},#{password})
    </insert>
    <select id="getUserByName"  parameterType="tech.laihz.treex.entity.LoginUser" resultType="tech.laihz.treex.entity.LoginUser">
        SELECT * FROM login_user WHERE name = #{name}
    </select>
</mapper>